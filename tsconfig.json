{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "lib": ["esnext"],
    "listEmittedFiles": false,
    "listFiles": false,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "resolveJsonModule": true,
    "declarationMap": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "traceResolution": false,
    "types": ["node"],
    "module": "esnext",
    "outDir": "build",
    "target": "esnext"
  },
  "compileOnSave": false,
  "exclude": ["node_modules", "build"],
  "include": ["src"]
}
