{
  "include": ["src"],
  "exclude": [
        "tests",
        "dist",
        "node_modules"
    ],
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // I chose ES5 here because I target nodeJS
    "target": "es5",
    "noImplicitAny": true,
     // I use commonJS / nodeJS as its the module system on NodeJS
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    // The compiled files destination
    "outDir": "build",
    // It tells typescript to generate the typings ( important if we want some "automatic" docs for our code
    "declaration": true,
    "rootDir": "src"
  }
}