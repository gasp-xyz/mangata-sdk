{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "eslint-plugin-tsdoc"],
  "rules": {
    "no-var": "warn",
    "prefer-const": "warn",
    "arrow-body-style": "off",
    "prefer-arrow-callback": "off",
    "semi": 0
  }
}
